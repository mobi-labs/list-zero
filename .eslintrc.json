{
  "plugins": ["unused-imports", "simple-import-sort", "@tanstack/query"],
  "extends": ["next", "prettier", "plugin:storybook/recommended"],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info"]
      }
    ],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "ft-flow/space-after-type-colon": 0,
    "ft-flow/no-types-missing-file-annotation": 0,
    "ft-flow/generic-spacing": 0
  }
}
